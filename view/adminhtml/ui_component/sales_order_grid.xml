<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="rad_works_quick_ship">
                <settings>
                    <confirm>
                        <message translate="true"><![CDATA[
Are you sure you want to automatically create shipment(s) for the selected orders?
The shipment will be created even if the shipped product is unavailable or has insufficient quantity.
]]></message>
                        <title translate="true">Create shipments</title>
                    </confirm>
                    <url path="sales/order/quickShip"/>
                    <type>quick_ship</type>
                    <label translate="true">Quick Shipment</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
</listing>
